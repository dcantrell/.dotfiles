# New II Tech personal account settings
set status_format="---[ Folder: %f ]---[ %r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)?%?p? ( %p postponed )? ]---%>-[ david@newiitech.com ]---"
set sendmail="/usr/bin/msmtp -a nt"
set folder="~/Maildir/david@newiitech.com"
set from="david@newiitech.com"
set signature="~/.mutt/signature/nt"
set spoolfile="+INBOX"
set postponed="+[Gmail]/Drafts"
unset record
folder-hook david@newiitech.com/* source ~/.mutt/accounts/nt
source ~/.mutt/mailboxes/nt
