# burdell.org account settings
set status_format="---[ Folder: %f ]---[ %r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)?%?p? ( %p postponed )? ]---%>-[ dcantrell@burdell.org ]---"
set sendmail="/usr/bin/msmtp -a burdell"
set folder="~/Maildir/dcantrell@burdell.org"
set from="dcantrell@burdell.org"
set signature="~/.mutt/signature/burdell"
set spoolfile="+INBOX"
set postponed="+Drafts"
set record="+Sent"

# always save read messages to 'archive' in IMAP
set confirmappend=no
set confirmcreate=no
save-hook . +archive

folder-hook dcantrell@burdell.org/* source ~/.mutt/accounts/burdell
source ~/.mutt/mailboxes/burdell

# Save read messages
macro index \' "<save-message>+archive<enter>" "archive"

# Move message to Junk folder
macro index,pager ! "<save-message>+Junk<enter><enter>" "Report spam"
